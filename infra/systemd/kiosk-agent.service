[Unit]
Description=Kiosk Agent Service
Documentation=https://github.com/InnoScripts2/my-own-service
After=network.target network-online.target
Wants=network-online.target

[Service]
Type=simple
User=kiosk
Group=kiosk
WorkingDirectory=/opt/kiosk-agent

# Environment variables
Environment="NODE_ENV=production"
Environment="AGENT_ENV=PROD"
Environment="AGENT_PORT=7070"
Environment="DATABASE_URL=/opt/kiosk-agent/data/kiosk.db"
Environment="LOG_LEVEL=info"
EnvironmentFile=-/opt/kiosk-agent/.env

# Start command
ExecStart=/usr/bin/node /opt/kiosk-agent/dist/index.js

# Restart policy
Restart=always
RestartSec=10
StartLimitInterval=200
StartLimitBurst=5

# Process management
KillMode=mixed
KillSignal=SIGTERM
TimeoutStopSec=30

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/opt/kiosk-agent/data /opt/kiosk-agent/logs
ProtectKernelTunables=true
ProtectKernelModules=true
ProtectControlGroups=true

# Resource limits
LimitNOFILE=65536
MemoryLimit=1G

# Logging
StandardOutput=journal
StandardError=journal
SyslogIdentifier=kiosk-agent

[Install]
WantedBy=multi-user.target
