[Unit]
Description=Kiosk Agent Docker Compose Stack
Requires=docker.service
After=docker.service

[Service]
Type=oneshot
RemainAfterExit=yes
WorkingDirectory=/opt/kiosk/infra/docker

# Start command
ExecStart=/usr/bin/docker-compose up -d

# Stop command
ExecStop=/usr/bin/docker-compose down

# Reload command
ExecReload=/usr/bin/docker-compose restart

# Restart policy
Restart=on-failure
RestartSec=30

[Install]
WantedBy=multi-user.target
