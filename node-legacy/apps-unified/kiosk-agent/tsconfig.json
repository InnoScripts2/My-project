{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "src/server.ts",
    "src/offline/**",
    "**/*.test.ts",
    // Исключаем легаси-драйверы и дубликаты драйверов OBD (используем пакет @selfservice/obd-diagnostics)
    "src/devices/obd/driver/**",
    "src/devices/obd/drivers/**",
    "src/devices/obd/Elm327Driver.ts"
  ]
}
